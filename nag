#! /usr/bin/env coffee
fs                = require("fs")
StubbornReadline  = require("./lib/stubbornReadline")
Stream            = require("stream")

questions = require("./lib/questions")
process.exit(0) unless questions.currentQuestion()

onAnswer = (answer) ->
  questions.nextQuestion()
  process.exit(0) unless questions.currentQuestion()
  readline.question(
    question: questions.currentQuestionToS()
    onAnswer: onAnswer
  )

readline  = new StubbornReadline()

readline.question(
  question: questions.currentQuestionToS()
  onAnswer: onAnswer
)
