#! /usr/bin/env coffee
CLIParser = require("../lib/cliParser")
Nag       = require("../index")
opts      = new CLIParser(args: process.argv.slice(2), env: process.env)

switch opts.command

  when 'nag'
    unless opts.ignore
      new Nag({
        interactive: true
        opts: opts
      })

  when 'edit'
    spawn  = require('child_process').spawn
    editor = process.env.EDITOR || 'vi'
    child  = spawn(editor, ["#{process.env.HOME}/.nag/questions.coffee"], { stdio: 'inherit' })
    child.on('exit', (e, code) ->)
